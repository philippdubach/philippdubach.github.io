  # Permissions Policy - restrict browser features (updated syntax)
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=(), browsing-topics=(), unload=()
  
  # Cross-Origin policies for additional isolation
  Cross-Origin-Embedder-Policy: credentialless
  Cross-Origin-Opener-Policy: same-origin
  
  # Prevent XSS in older browsers (deprecated but harmless)
  X-XSS-Protection: 0

